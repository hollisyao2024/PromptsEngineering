{
  // ============================================================================
  // Claude Code 个人配置模板（完全自动化）
  // 用途：覆盖团队共享配置，实现无打扰的自动化工作流
  // 使用方法：复制此文件并重命名为 settings.local.json（移除 .template 后缀）
  // 提交状态：不提交到 Git（已在 .gitignore 中忽略）
  // 注意：settings.local.json 本身不支持注释，此模板仅供参考
  // ============================================================================

  // --- 沙箱配置 ---
  // 禁用沙箱并自动执行命令，启用沙箱只能写入项目目录下的位置，很多命令可能会在这之外，导致报错。
  "sandbox": {
    // 禁用沙箱模式（macOS/Linux）
    "enabled": false,

    // 在沙箱中自动执行 bash 命令，无需确认
    "autoAllowBashIfSandboxed": true
  },

  // --- MCP 服务器 ---
  // 自动批准所有项目级 MCP 服务器，无需每次询问
  "enableAllProjectMcpServers": true,

  // --- 权限配置（完全自动化）---
  "permissions": {
    // 允许所有操作类型，无需确认
    // 注意：沙箱仍然提供安全保护（限制项目目录外的写入）
    "allow": [
      "Bash",           // 所有 bash 命令（git、npm、ls 等）
      "Edit",           // 所有文件编辑操作
      "Write",          // 所有文件写入操作
      "WebFetch",       // 所有网络访问（API 调用等）
      "SlashCommand",   // 所有自定义 slash 命令
      "NotebookEdit"    // 所有 Jupyter notebook 编辑
    ],

    // 拒绝列表为空（沙箱已提供安全保护）
    // 团队配置中的拒绝规则被此配置覆盖
    "deny": [],

    // 询问列表为空（实现完全自动化）
    // 团队配置中的确认规则被此配置覆盖
    "ask": []
  }
}

